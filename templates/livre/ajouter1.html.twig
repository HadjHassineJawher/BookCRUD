{% extends "base.html.twig" %}
{% block title %}{{parent()}} Méthode 1 {% endblock %}
{% block body %}
<br><br>

<div class="container">
    <form method="post">
        <div class="form-group">
            <label for="titre">Titre de Livre</label>
            <input type="text" class="form-control" id="titre"  placeholder="Saisir le Titre du Livre" name="titre">
        </div>

        <div class="form-group">
            <label for="date">Date d'Edition </label>
            <input type="date" class="form-control" id="date"/ name="date">
        </div>

        <div class="form-group">
            <label for="editeur">Nom de l'Editeur </label>
            <input type="text" class="form-control" id="editeur"  placeholder="Saisir le Nom de l'Editeur" name="editeur">
        </div>

        <div class="form-group">
            <label for="livre"> Image du livre </label>
            <input type="text" class="form-control" id="livre"  placeholder="Saisir le lien de l'image" name="image">
        </div>

        <div class="form-group">
            <label for="resume"> Résumé du Livre</label>
            <textarea class="form-control" id="resume"  placeholder="Saisir le Résumé du Livre" row="4" name="resume"></textarea>
        </div>

        <button type="submit" class="btn btn-primary btn-block"> Ajouter </button>
    </form>
</div>

{% endblock %}